.tabbable.tabs-below
  %ul.nav.nav-tabs
    %li
      %a{:href => '#tab1', :'data-toggle' => 'tab'}
        Preventive Reconciliation
    %li.active
      %a{:href => '#tab2', :'data-toggle' => 'tab'}
        Object Reverse Merge

  .tab-content
    #tab1.tab-pane
      .box
        %form
          #run.btn.btn-primary Run Suite
        .well
          #tab1_chartContainer

    #tab2.tab-pane.active
      .box
        %form
          #run.btn.btn-primary Run Suite
        .well
          #tab2_chartContainer

:coffeescript
  # record active tab in localStorage
  $('.nav-tabs a').click ->
    localStorage.current = $(@).attr('href')
  # set active tab from localStorage
  $ ->
    $("a[href='\#{localStorage.current}']").click()

= javascript_include_tag 'benchmarking/benches'